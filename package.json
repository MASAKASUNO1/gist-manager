{
  "name": "gist-manager",
  "displayName": "Gist Manager",
  "description": "GitHub Gistの作成・表示・更新・削除を行うVSCode拡張機能",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gist-manager.list",
        "title": "Gist: List My Gists"
      },
      {
        "command": "gist-manager.create",
        "title": "Gist: Create New Gist"
      },
      {
        "command": "gist-manager.update",
        "title": "Gist: Update Gist"
      },
      {
        "command": "gist-manager.delete",
        "title": "Gist: Delete Gist"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "extensionDependencies": [
    "vscode.github-authentication"
  ]
}
